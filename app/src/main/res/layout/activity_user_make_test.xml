<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/makeTestLayoutLook"
    tools:context=".UserMakeTestActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">

        <EditText
            android:layout_marginTop="50dp"
            android:id="@+id/testName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:background="@drawable/edit_text_custom_design"
            android:textColor="#9f171d"
            android:fontFamily="serif-monospace"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:textAlignment="inherit"
            android:hint="Write a test name" />

        <NumberPicker
            android:id="@+id/makedTestDurationPicker"
            android:layout_width="50dp"
            android:layout_gravity="right"
            android:layout_height="50dp">

        </NumberPicker>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >


        <android.support.v7.widget.RecyclerView

            android:id="@+id/questionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <Button
        android:id="@+id/addQuestionButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Make Question"
        android:textColor="#FFFFFF"
        android:background="@drawable/main_layout_btns"
        android:layout_gravity="left|bottom"
        />

    <Button
        android:id="@+id/userMakeTestButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Make a test"
        android:background="@drawable/main_layout_btns"
        android:layout_gravity="right|bottom"
        />
</FrameLayout>