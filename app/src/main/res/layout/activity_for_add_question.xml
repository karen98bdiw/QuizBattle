<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addQuestionActivityLook"
    android:orientation="vertical"
    tools:context=".ActivityForAddQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <EditText
        android:id="@+id/InAddQuestionText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_custom_design"
        android:textColor="#9f171d"
        android:fontFamily="serif-monospace"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:textAlignment="inherit"
        android:maxLines="1"
        android:hint="Write a question"
        />

    <EditText
        android:id="@+id/InAddOptionText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_custom_design"
        android:textColor="#9f171d"
        android:fontFamily="serif-monospace"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:textAlignment="inherit"
        android:maxLines="1"
        android:hint="Write a option"
        />

    <LinearLayout
        android:id="@+id/addedOptionsLook"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        />

    </LinearLayout>

    <Button
        android:id="@+id/addOptionButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:background="@drawable/main_layout_btns"
        android:text="Add Option"
        />

    <Button
        android:id="@+id/creatQuestionButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_layout_btns"
        android:layout_gravity="right|bottom"
        android:text="Create Question"
        />

</FrameLayout>